<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="Username" class="form-lable mb-2">Username</label>
                <input required id="username" class="form-control" type="text" name="username" placeholder="07_John_Doe"/>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-lable mb-2">Email</label>
                <input required id="email" class="form-control" type="text" name="email" placeholder="john.doe@hotmail.com"/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable mb-2">Password</label>
                <input required id="password" class="form-control" type="password" name="password" placeholder="**********"/>
            </div>
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>
